{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../",
                    "files": [
                        "**/*.csproj",
						"DbContextBuilder/DbContextBuilder.csproj"
                    ],
                    "exclude": [
                        "**/bin/**",
                        "**/obj/**"
                    ]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
				"files": [
				  "docs/toc.yml",
				  "docs/*.md",
				  "docs/articles/**.md",
				  "api/**.yml",
				  "api/toc.yaml",
				  "api/index.md",
				  "README.md"
				],
				"src": "../"
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ],
				"src": "../"				
            }
        ],
        "output": "api",
        "template": [
            "default",
            "modern"
        ],
        "globalMetadata": {
            "_appName": "DbContextBuilder",
            "_appTitle": "DbContextBuilder",
            "_enableSearch": true,
            "pdf": true
        }
    }
}