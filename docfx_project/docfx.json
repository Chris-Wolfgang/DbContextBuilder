{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
			"src/Wolfgang.DbContextBuilder-Core/Wolfgang.DbContextBuilder-Core.csproj"
          ],
          "src": "../"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
		"files": [
			"**/*.{md,yml}"
		],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
	"homepage": "docs/index.md",  // <--- Add this line
    "template": [
      "modern",
      "default"
    ],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "DbContextBuilder",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
